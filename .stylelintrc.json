{
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
  "plugins": ["stylelint-scss"],
  "rules": {
    "indentation": 2,
    "string-quotes": "single",
    "color-hex-case": "lower",
    "no-empty-source": null,
    "scss/dollar-variable-pattern": "^[_a-z]+[a-zA-Z0-9-]*$"
  }
}
